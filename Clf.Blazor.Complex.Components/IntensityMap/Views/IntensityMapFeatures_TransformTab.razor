  <div class = "transform-tab">
    <div style="grid-column:1;">
        <label>Transform Type</label>
    </div>
    <div style="grid-column:2;">
        <ComboBox ViewModel="@ViewModel.TransformTypeSet" />
    </div>
    <div style="grid-column:3;">
        <TextUpdate ViewModel="@ViewModel.TransformTypeRBV" />
    </div>
    <div style="grid-column:1;">
        <label>Output Size</label>
    </div>
    <div style="grid-column:2;">
        <TextUpdate ViewModel="@ViewModel.TransformOutputArraySizeX" />
    </div>
    <div style="grid-column:3;">
        <TextUpdate ViewModel="@ViewModel.TransformOutputArraySizeY" />
    </div>
    <div style="grid-column:1/4;text-align:center;">
        <ActionButton ViewModel="@ViewModel.TransformPluginSettings" />
    </div>
  </div>


@code {
    [Parameter]
    public IntensityMapFeatures_TransformTabViewModel ViewModel { get; set; }
}